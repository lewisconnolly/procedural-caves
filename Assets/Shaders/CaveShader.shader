            //--------------------------------------
            // GPU Instancing
            #pragma multi_compile_instancing
            #pragma instancing_options renderinglayer
            #include_with_pragmas "Packages/com.unity.render-pipelines.universal/ShaderLibrary/DOTS.hlsl"

            //--------------------------------------
            // Smoothing

            // Calculate Phong projection offset
            float3 PhongProjectedPosition(float3 flatPositionWS, float3 cornerPositionWS, float3 normalWS) {
                return flatPositionWS - dot(flatPositionWS - cornerPositionWS, normalWS) * normalWS;
            }

           // Apply Phong smoothing
            float3 CalculatePhongPosition(float3 bary, float smoothing, float3 p0PositionWS, float3 p0NormalWS,
                float3 p1PositionWS, float3 p1NormalWS, float3 p2PositionWS, float3 p2NormalWS) {
                //float3 flatPositionWS = BarycentricInterpolate(bary, p0PositionWS, p1PositionWS, p2PositionWS);
                float3 flatPositionWS = p0PositionWS * bary.x + p1PositionWS * bary.y + p2PositionWS * bary.z;
                float3 smoothedPositionWS =
                    bary.x * PhongProjectedPosition(flatPositionWS, p0PositionWS, p0NormalWS) +
                    bary.y * PhongProjectedPosition(flatPositionWS, p1PositionWS, p1NormalWS) +
                    bary.z * PhongProjectedPosition(flatPositionWS, p2PositionWS, p2NormalWS);
                return lerp(flatPositionWS, smoothedPositionWS, smoothing);
            }

            //--------------------------------------
            // Tessellation                        

            // pre tesselation vertex program
			ControlPoint TessellationVertexProgram(Attributes v)
			{               
                ControlPoint p;
 
				p.positionOS = v.positionOS;
				p.texcoord = v.texcoord;
				p.normalOS = v.normalOS;
				p.color = v.color;
                p.tangentOS = v.tangentOS;
                p.staticLightmapUV = v.staticLightmapUV;
                p.dynamicLightmapUV = v.dynamicLightmapUV;
 
				return p;
			}                          
            
            [UNITY_domain("tri")]
			Varyings domain(TessellationFactors factors, OutputPatch<ControlPoint, 3> patch, float3 barycentricCoordinates : SV_DomainLocation)
			{
				Attributes v;                
                
                // Calculate tessellation smoothing multipler
                float smoothing = _TessellationSmoothing;

                // Convert positions to world space
                float3 p0PositionWS = TransformObjectToWorld(patch[0].positionOS.xyz);
                float3 p1PositionWS = TransformObjectToWorld(patch[1].positionOS.xyz);
                float3 p2PositionWS = TransformObjectToWorld(patch[2].positionOS.xyz);
    
                // Convert normals to world space
                float3 p0NormalWS = TransformObjectToWorldNormal(patch[0].normalOS);
                float3 p1NormalWS = TransformObjectToWorldNormal(patch[1].normalOS);
                float3 p2NormalWS = TransformObjectToWorldNormal(patch[2].normalOS);
           
                 // Phong smoothing in world space
                float3 positionWS = CalculatePhongPosition(
                    barycentricCoordinates,
                    smoothing,
                    p0PositionWS, p0NormalWS, 
                    p1PositionWS, p1NormalWS, 
                    p2PositionWS, p2NormalWS
                );
                
                // Convert back to object space
                v.positionOS.xyz = TransformWorldToObject(positionWS);

				// interpolate the new positions of the tessellated mesh
				//Interpolate(positionOS)
				Interpolate(texcoord)
				Interpolate(color)
				Interpolate(normalOS)
                Interpolate(tangentOS)
                Interpolate(staticLightmapUV)
                Interpolate(dynamicLightmapUV)
 
				return LitPassVertex(v, _Noise, _Weight);
			}
                       
            ENDHLSL
